    <script>
        let selectedProduct = {};
        
        function openTicket(name, price, icon, draftTicketId) {
            selectedProduct = { name, price, icon, draftTicketId };
            
            document.getElementById('selectedItem').innerHTML = `
                <div style="display: flex; align-items: center; gap: 20px;">
                    <span style="font-size: 2.5em; filter: drop-shadow(0 0 5px rgba(0, 191, 255, 0.6));">${icon}</span>
                    <div>
                        <div style="font-family: 'Orbitron', monospace; font-weight: 700; color: #ffffff; font-size: 1.2em;">${name}</div>
                        <div style="color: #ffa500; font-weight: 700; font-size: 1.1em; margin-top: 5px;">${price} Vifs d'or</div>
                    </div>
                </div>
            `;
            
            document.getElementById('draftTicketId').textContent = `ID Draft Bot: ${draftTicketId}`;
            
            document.getElementById('ticketModal').style.display = 'block';
            document.getElementById('ticketForm').style.display = 'flex';
            document.getElementById('ticketSuccess').style.display = 'none';
        }
        
        function closeTicket() {
            document.getElementById('ticketModal').style.display = 'none';
            document.getElementById('discordName').value = '';
        }
        
        function submitTicket() {
            const discordName = document.getElementById('discordName').value;
            
            if (!discordName) {
                alert('Veuillez entrer votre nom Discord!');
                return;
            }
            
            // Données du ticket à envoyer
            const ticketData = {
                discordName: discordName,
                product: selectedProduct.name,
                price: selectedProduct.price,
                icon: selectedProduct.icon,
                draftTicketId: selectedProduct.draftTicketId,
                timestamp: new Date().toISOString()
            };
            
            // Générer un numéro de ticket unique
            const ticketNumber = Math.floor(Math.random() * 900000) + 100000;
            
            // Envoyer vers Discord
            sendToDiscord(ticketData, ticketNumber);
            
            // Afficher le succès
            showTicketSuccess(ticketNumber);
        }
        
        function sendToDiscord(ticketData, ticketNumber) {
            // 🎯 METTEZ VOTRE WEBHOOK DISCORD ICI 👇👇👇
            const webhookURL = 'https://discord.com/api/webhooks/VOTRE_ID/VOTRE_TOKEN';
            
            const embed = {
                title: "🛒 Nouvelle Commande - ARK CHILL FAMILY",
                color: 0x00BFFF,
                fields: [
                    {
                        name: "👤 Client Discord",
                        value: ticketData.discordName,
                        inline: true
                    },
                    {
                        name: "📦 Article",
                        value: `${ticketData.icon} ${ticketData.product}`,
                        inline: true
                    },
                    {
                        name: "💰 Prix",
                        value: `${ticketData.price} Vifs d'or`,
                        inline: true
                    },
                    {
                        name: "🎫 Numéro de Ticket",
                        value: `#${ticketNumber}`,
                        inline: true
                    },
                    {
                        name: "🤖 Draft Bot ID",
                        value: ticketData.draftTicketId,
                        inline: true
                    },
                    {
                        name: "⏰ Heure",
                        value: new Date().toLocaleString('fr-FR'),
                        inline: true
                    }
                ],
                footer: {
                    text: "ARK CHILL FAMILY Shop"
                },
                timestamp: ticketData.timestamp
            };
            
            // Envoi vers Discord
            fetch(https://discord.com/api/v10/webhooks/1416822680086118564/mpF2SzCWpwpqqParLJQCX-REd86jxaAzFu2MSW8ni2q8Hu5scdxnv8ZBP3B-hhAed1O7, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    embeds: [embed]
                })
            })
            .then(response => {
                if (response.ok) {
                    console.log('Ticket envoyé avec succès à Discord');
                } else {
                    console.error('Erreur lors de l\'envoi du ticket');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
            });
        }
        
        function showTicketSuccess(ticketNumber) {
            document.getElementById('ticketForm').style.display = 'none';
            document.getElementById('ticketSuccess').style.display = 'block';
            document.getElementById('ticketNum').textContent = ticketNumber;
        }
        
        // Fermer le modal en cliquant à l'extérieur
        window.onclick = function(event) {
            const modal = document.getElementById('ticketModal');
            if (event.target == modal) {
                closeTicket();
            }
        }
    </script>
